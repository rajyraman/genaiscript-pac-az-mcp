{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start DevContainer",
            "type": "shell",
            "command": "devcontainer",
            "args": [
                "up",
                "--workspace-folder",
                "${workspaceFolder}"
            ],
            "isBackground": true,
            "runOptions": {
                "instanceLimit": 1
            }
        }
    ]
}